<div class="register-photo">
    <div class="form-container">
        <form action='/categories/create' method="post">
            <h2 class="text-center">Ajouter une catégorie.</h2>
            {{#if errors}}
                <div class="alert {{errors.alert}}">
                    {{errors.msg}}
                </div>
            {{/if}}
            <div class="row">
                <div class="col">
                    <div class="form-group"><input type="text" class="form-control" name="name_categorie" placeholder="Nom de la catégorie"/></div>
                </div>
            </div>
            
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Ajouter</button></div>

            <input type="hidden" name="_csrf" value="{{csrfToken}}">
        </form>
    </div>
</div>