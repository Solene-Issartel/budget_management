<div class="custom_form">
    <form class="form_login" action="/login" method="post">
            <h2 class="title_form text-center">Se connecter.</h2>
            <div class="illustration"><i class="icon ion-ios-navigate"></i></div>
            <div class="form-group">
                {{#if errors}}
                    <div class="alert {{errors.alert}}">
                        {{errors.msg}}
                    </div>
                {{/if}}
                <input class="form-control" type="email" name="email" placeholder="Email" />
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Mot de passe" />
            </div>
            
            <div class="form-group"><button class="btn btn-primary custom_btn btn-block" type="submit">Valider</button></div><a class="forgot" href="/register">Vous n'avez pas de compte ? Cliquez ici</a>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </form>
</div>