<div class="register-photo">
    <div class="form-container">
        <form action='/profile/update?_method=PUT' method="post">
            <h2 class="text-center">Modifier le produit.</h2>
            {{#if errors}}
                <div class="alert {{errors.alert}}">
                    {{errors.msg}}
                </div>
            {{/if}}
            <div class="row">
                <div class="col">
                    <div class="form-group"><input type="text" class="form-control" name="name" value="{{name}}" /></div>
                
                    <h5 id="changeCat" class="text-center">Changer de cat√©gorie (facultatif)</h5>
                    <div class="form-group">
                        
                        <select class="form-control">
                            {{#each categories as | cat |}}
                                <option value="{{cat.id_cat}}">{{cat.name_cat}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
            
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group"><button name="update" value="update" class="btn btn-primary btn-block" type="submit">Modifier</button></div>
            
            <div class="d-flex">
                <div class="mr-auto p-2"></div>
                <div class="p-2 form-group"><button class="btn btn-danger btn-block" type="button" data-toggle="modal" data-target="#exampleModal">Supprimer mon compte</button></div>
            </div>
            
        </form>
    </div>
        
    </div>
