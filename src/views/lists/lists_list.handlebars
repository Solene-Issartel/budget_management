<section>
    <div class="container">
        <div class="row align-items-center"></div>
        <div class="row align-items-center">
            <div class="p-5">
                <h3 class="display-4">Liste des listes</h3>
                <p>Gérer les listes : modifier, ajouter ou supprimer.</p>
                <a href="/lists/create">Ajouter une liste</a>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        {{#if errors}}
            <div class="alert {{errors.alert}}">
                {{errors.msg}}
            </div>
        {{/if}}
        <div class="row align-items-center">
            <div class="col" style="width:50%">
                <ul class="list-group">
                    {{#each lists as | li |}}
                    <li class="list-group-item"><span>Liste du {{date_list}}</span><div>
                        <a href="/lists/update/{{id_list}}">Modifier</a><a type="button" onclick="changeUrl({{id_list}})" data-toggle="modal" data-target="#DelListModal">Supprimer</a>
                    </div></li>
                    {{/each}}
                </ul>
              
                <!-- Modal -->
                    <div class="modal fade" id="DelListModal" tabindex="-1" role="dialog" aria-labelledby="DelListModal" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="DelListModal">Attention</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Cette action est irréversible. Voulez-vous vraiment supprimer cette liste ?
                                </div>
                                <div class="modal-footer">
                                    <form id="deleteForm" method="post" action="">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button id="deleteList" name="delete" value="delete" type="submit" class="btn btn-danger">Supprimer</button>
                                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                
            </div>
        </div>
    </div>
</section>
<script>
    function changeUrl(id){
        $("form#deleteForm").attr("action","/lists/delete/"+id+"?_method=DELETE");
    }
</script>
