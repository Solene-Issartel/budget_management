<canvas id="myChart" style="max-width: 70%; margin-top:100px;"></canvas>
<input type="hidden" name="_csrf" value="{{csrfToken}}">

<script>
 $(document).ready(function(){
    $.ajax({
        type: 'post',
        url: '/graphs/budgets',
        data: { _csrf: $("input[name='_csrf']").val()},
        dataType: 'json'
    })
    .done(function(results){
        const datas = results.map(x => x.total_price_list)
        const dates = results.map(x => x.date_list)
        makeBarChart(datas,dates)
    })
    .fail(function(XMLHttpRequest, textStatus, errorThrown) { 
    console.log("Status: " + textStatus); console.log("Error: " + errorThrown);
    }) 
})

function makeBarChart(datas,dates){
    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: dates,
            datasets: [{
                label: 'Evolution de vos budgets',
                data: datas,
                backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
}

</script>